@page
@model PatientInformation.Pages.Patients.IndexModel
@{
}

<br />
<h2> Patient Information</h2>
<a class = 'btn btn-primary btn-sm' href='/Patients/CreatePatient'>
    New Patient
</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip Code</th>
            <th>Creation Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listPatients)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.city</td>
                <td>@item.state</td>
                <td>@item.zipCode</td>
                <td>@item.creationDate</td>

                <td>
                    <a class = "btn btn-primary btn-sm" href="/Patients/EditPatient?id=@item.id">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Patients/DeletePatient?id=@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>