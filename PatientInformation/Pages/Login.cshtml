@page
@model PatientInformation.Pages.LoginModel
@{
}



<br />
<h2 style="text-align:center; padding:25px;">Welcome</h2>
@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>

        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'>
        </button>

    </div>
}

@foreach(var item in Model.listAdmin){
    <h1>item.username</h1>
    <a class="btn btn-primary btn-sm" href="/Admin/ViewAdmin?admin_username=@item.admin_username">Edit</a>
}




<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
            <input type ="text" class="form-control" placeholder= "Username" name="admin_username" >
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
            <input type="text" class="form-control" placeholder ="Password"name="admin_password" >
        </div>
     </div>

     <div class="row mb-3">
        <label class="col-sm-3 col-form-label"></label>
         <div class=" col-sm-6">
             
            <button type="submit" class="btn btn-primary" style="width:100%"  name="login">Login</button>
         </div>
     </div>
    
   

</form>
